{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "main.cpp",
                "InvestmentCalculator.cpp",
                "-o",
                "AirgeadBanking" // Name of the output executable
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "detail": "Generated task by the C++ extension."
        },
        {
            "label": "run",
            "type": "shell",
            "command": "./AirgeadBanking.exe",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "dependsOn": "build"
        }
    ]
}